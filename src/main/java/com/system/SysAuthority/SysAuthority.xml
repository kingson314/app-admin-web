<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.SysAuthority.dao.SysAuthorityDao">
	<resultMap id="BaseResultMap" type="com.system.SysAuthority.model.SysAuthority">
		<id column="id" jdbcType="BIGINT" property="id" />
		<id column="createDate" jdbcType="VARCHAR" property="createDate" />
	</resultMap> 

	<select id="listSysAuthority" parameterType="String" resultType="java.util.HashMap">
		select menuId from SysAuthority  where roleId in (select roleId from SysUserRole where userId=#{userId})
	</select>
</mapper>